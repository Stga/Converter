<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.allizgwats.converter.converter_activity.TimeConverterFragment">

    <!-- Text views and "from" timezone for displaying conversions -->
    <TextView
        android:id="@+id/timeConverter_timezoneSelectorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

        <!--List view that will contain timezone information the user can select -->
        <!--Holo Light background colour is used for divider i.e. #fff3f3f3-->
        <ListView
            android:id="@+id/timeConverter_timezoneSelectorListView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/listview_border_shape"
            android:layout_centerHorizontal="true">
        </ListView>

    <!-- Text views and "from" timezone for displaying conversions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeConverter_inputSectionIdentifier_from"
        android:layout_alignLeft="@+id/timeConverter_llayoutFrom"
        android:layout_alignBottom="@+id/timeConverter_llayoutFrom"
        android:layout_marginBottom="50dp"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:id="@+id/timeConverter_llayoutFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="420dp">

        <EditText
            android:id="@+id/timeConverter_hoursFrom"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/timeConverter_defaultUiTimes"
            android:textSize="40sp"
            android:minEms="1"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/timeConverter_dividerFrom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/timeConverter_timesDivider"
            android:textSize="40sp"
            android:fontFamily="monospace"/>

        <EditText
            android:id="@+id/timeConverter_minutesFrom"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/timeConverter_defaultUiTimes"
            android:textSize="40sp"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeConverter_llayoutTimezoneSelectors"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/timeConverter_timezoneSelectorListView"
        android:layout_alignLeft="@id/timeConverter_timezoneSelectorListView"
        android:layout_below="@id/timeConverter_timezoneSelectorListView"
        android:background="@drawable/listview_border_shape">

        <!--TODO STYLE THE BUTTONS FOR SELECTING TIMEZONES-->
        <Button
            android:id="@+id/timeConverter_timezoneTo"
            android:text="To Timezone"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:background="@drawable/time_converter_tz_to_button_style"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
        />

        <Button
            android:id="@+id/timeConverter_timezoneFrom"
            android:text="From Timezone"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0.6"
            android:background="@drawable/time_converter_tz_from_button_style"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
        />
        </LinearLayout>


    <!-- Text views and "to" timezone for displaying conversions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeConverter_inputSectionIdentifier_to"
        android:layout_alignLeft="@+id/timeConverter_llayoutTo"
        android:layout_alignBottom="@id/timeConverter_llayoutTo"
        android:layout_marginBottom="40dp"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:id="@+id/timeConverter_llayoutTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="430dp"
        android:layout_alignRight="@id/timeConverter_llayoutTimezoneSelectors">

        <!-- TODO STYLE THE OUTPUT TEXT -->
        <TextView
            android:id="@+id/timeConverter_hoursTo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/timeConverter_defaultUiTimes"
            android:textSize="40sp"
            android:clickable="false"
            android:longClickable="false"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/timeConverter_dividerTo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="@string/timeConverter_timesDivider"
            android:textSize="40sp"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/timeConverter_minutesTo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/timeConverter_defaultUiTimes"
            android:textSize="40sp"
            android:clickable="false"
            android:longClickable="false"
            android:imeOptions="actionDone"/>

    </LinearLayout>


</RelativeLayout>
