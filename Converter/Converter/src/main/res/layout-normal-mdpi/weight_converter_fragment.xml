<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.allizgwats.converter.converter_activity.TimeConverterFragment">

    <TextView
        android:id="@+id/weightConverter_convertedWeightTextView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:text="300lbs"
        android:textSize="50sp"
        android:background="@drawable/weight_converter_circle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/weightConverter_originalWeightEditText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:singleLine="true"
        android:text="00"
        android:textSize="45sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/weightConverter_convertedWeightTextView"
    />

    <Spinner
        android:id="@+id/weightConverter_spinnerA"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:entries="@array/weight_metrics"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/weightConverter_originalWeightEditText"
    />

    <Spinner
        android:id="@+id/weightConverter_spinnerB"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:entries="@array/weight_metrics"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/weightConverter_spinnerA"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/weightConverter_originalWeightEditText"
        />

</RelativeLayout>